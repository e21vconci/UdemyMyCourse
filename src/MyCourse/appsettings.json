{
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880
    }
  },
  "Authentication": {
    "Facebook": {
      "AppId": "App Id you got from Facebook",
      "AppSecret":  "App Secret you got from Facebook"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Default": "Data Source=Data/MyCourse.db"
  },
  "DistributedCache": {
    "Redis": {
        "Configuration": "localhost",
        "InstanceName": "MyCourseRedisCache"
    },
    "SqlServer": {
        "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDb;Integrated Security=True",
        "SchemaName": "dbo",
        "TableName": "MyCourseSqlCache"
    }
  },
  "Courses": {
    "PerPage": 10,
    "InHome": 3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": ["Id", "Title", "Rating", "CurrentPrice"]
    }
  },
  "MemoryCache": {
    "TimeSpan": 60
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": ["page"]
    }
  },
  "Smtp": {

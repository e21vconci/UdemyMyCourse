{
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880
    }
  },
  "Authentication": {
    "Facebook": {
      "AppId": "App Id you got from Facebook",
      "AppSecret":  "App Secret you got from Facebook"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
        { 
            "Name": "Console",
            "Args": {
                "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
            }
        },
        { 
            "Name": "File",
            "Args": {
                "path": "Logs/log.txt",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 14,
                "restrictedToMinimumLevel": "Warning",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
            }
        }
    ]
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Default": "Data Source=Data/MyCourse.db"
  },
  "DistributedCache": {
    "Redis": {
        "Configuration": "localhost",
        "InstanceName": "MyCourseRedisCache"
    },
    "SqlServer": {
        "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDb;Integrated Security=True",
        "SchemaName": "dbo",
        "TableName": "MyCourseSqlCache"
    }
  },
  "Courses": {
    "PerPage": 10,
    "InHome": 3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": ["Id", "Title", "Rating", "CurrentPrice"]
    }
  },
  "MemoryCache": {
    "ExpirationTimeCache": 60
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": ["page"]
    }
  },
  "Smtp": {
    "Host": "smtp.mailtrap.io",
    "Port": 25,
    "Security": "StartTls",
    "Username": "2b0a706cf339e9",
    "Password": "2da80d59258772",
    "Sender": "MyCourse <noreply@example.org>"
  },
  "ImageValidation": {
    "Key": "Si consiglia di mettere la Key per il servizio Computer Vision su variabile d'ambiente",
    "Endpoint": "Si consiglia di mettere l'Endpoint per il servizio Computer Vision su variabile d'ambiente",
    "MaximumAdultScore": 0.6
  },
  "ReCaptcha": {
    "SiteKey": "SiteKey fornita da Google su https://www.google.com/recaptcha/admin/create",
    "SecretKey": "SecretKey fornita da Google su https://www.google.com/recaptcha/admin/create",
    "Version": "v2"
  },
  "Users": {
    "AssignAdministratorRoleOnRegistration": "admin@example.com",
    "NotificationEmailRecipient": "boss@example.com"
  },
  "Paypal": {
    "ClientId": "ClientId fornito da Paypal su https://developer.paypal.com",
    "ClientSecret": "ClientSecret fornito da Paypal su https://developer.paypal.com",
    "IsSandbox": true,
    "BrandName": "MyCourse"
  },
  "Stripe": {
    "PrivateKey": "Chiave privata fornita da Stripe su https://dashboard.stripe.com/"
  }
}
